<div class="row">
  <div class="col-md-6 col-md-offset-5 login-div">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h5>Login</h5>
      </div>
      <div class="panel-body">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <%= f.input :email, required: false, autofocus: true, input_html: { class: 'form-control' } %>
            <br>
            <%= f.input :password, required: false, input_html: { class: 'form-control' } %>
          </div>
          <br>
          <div class="form-actions pull-right">
            <%= f.button :submit, "Entrar", class: "btn btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
