<div class='panel-heading'>
  <span data-toggle="collapse" data-target="#filters_div" class='lead'>Filtros</span>
</div>
<%= search_form_for @q, html: { class: 'form-inline' } do |f| %>
  <div class='panel-body panel-collapse collapse in' id='filters_div'>
      <%= f.search_field :name_cont, placeholder: I18n.t("activerecord.attributes.customer.name"), class: "form-control" %>

      <%= f.search_field :email_cont, placeholder: I18n.t("activerecord.attributes.customer.email"), class: "form-control" %>

      <%= f.search_field :store_cont, placeholder: I18n.t("activerecord.attributes.customer.store"), class: "form-control" %>

      <%= f.search_field :le_lost_type_eq, placeholder: I18n.t("activerecord.attributes.customer.le_lost_type"), class: "form-control" %>
      <br/>

      <%= f.search_field :re_lost_type_eq, placeholder: I18n.t("activerecord.attributes.customer.re_lost_type"), class: "form-control" %>

      <%= f.search_field :le_device_type_eq, placeholder: I18n.t("activerecord.attributes.customer.le_device_type"), class: "form-control" %>

      <%= f.search_field :re_device_type_eq, placeholder: I18n.t("activerecord.attributes.customer.re_device_type"), class: "form-control" %>
      <br/>

      <%= f.text_field :purchased_at_gteq, placeholder: "Comprado de: (dd/mm/aaaa)", class: "form-control" %>

      <%= f.text_field :purchased_at_lteq, placeholder: "Comprado até: (dd/mm/aaaa)", class: "form-control" %>

      <%= f.text_field :dob_gteq, placeholder: "Nascido de: (dd/mm/aaaa)", class: "form-control" %>

      <%= f.text_field :dob_lteq, placeholder: "Nascido até: (dd/mm/aaaa)", class: "form-control" %>

      <br/><br/>
      <span class='pull-right'><%= f.submit "Buscar", class: 'btn btn-primary' %></span>
  </div>
<% end %>
