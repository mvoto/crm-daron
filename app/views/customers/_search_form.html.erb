<%= search_form_for @q, html: { class: 'form-inline' } do |f| %>
  <fieldset>
    <legend>Filtros:</legend>
    <%= f.search_field :name_cont, placeholder: I18n.t("activerecord.attributes.customer.name") %>

    <%= f.search_field :email_cont, placeholder: I18n.t("activerecord.attributes.customer.email") %>

    <%= f.search_field :store_cont, placeholder: I18n.t("activerecord.attributes.customer.store") %>

    <%= f.search_field :le_lost_type_eq, placeholder: I18n.t("activerecord.attributes.customer.le_lost_type") %>
    <br/>

    <%= f.search_field :le_lost_type_eq, placeholder: I18n.t("activerecord.attributes.customer.le_lost_type") %>

    <%= f.search_field :le_device_type_eq, placeholder: I18n.t("activerecord.attributes.customer.le_device_type") %>

    <%= f.search_field :re_device_type_eq, placeholder: I18n.t("activerecord.attributes.customer.re_device_type") %>
    <br/>

    <%= f.text_field :purchased_at_gteq, placeholder: "Comprado de: (dd/mm/aaaa)" %>

    <%= f.text_field :purchased_at_lteq, placeholder: "Comprado até: (dd/mm/aaaa)" %>

    <%= f.text_field :dob_gteq, placeholder: "Nascido de: (dd/mm/aaaa)" %>

    <%= f.text_field :dob_lteq, placeholder: "Nascido até: (dd/mm/aaaa)" %>
  </fieldset>

  <br/>

  <%= f.submit "Buscar" %>
<% end %>
