<div class='panel panel-default'>

<div class="panel-heading">
  <i class="fa fa-search fa-fw"></i> Busca
</div>


<div class="panel-body">
  <%= search_form_for @q, html: { class: 'form-inline' } do |f| %>
    <div class='form-group'>
      <%= f.search_field :name_cont, placeholder: I18n.t("activerecord.attributes.customer.name"), class: "form-control" %>
      <%= f.search_field :devices_store_or_devices_other_store_cont, placeholder: I18n.t("activerecord.attributes.device.store"), class: "form-control" %>
      <%= f.search_field :devices__type_cont, placeholder: I18n.t("activerecord.attributes.device._type"), class: "form-control" %>
      <%= f.text_field :devices_brand, placeholder: I18n.t("activerecord.attributes.device.brand"), class: "form-control" %>
      <%= f.collection_select :address_city_id_eq, City.all, :id, :full_name, {include_blank: 'Escolha uma Cidade'}, {class: "form-control"} %>

      <div class="input-group input-daterange">
        <%= f.text_field :dob_gteq, placeholder: "Nascido de:", class: "form-control" %>
        <div class="input-group-addon">até</div>
        <%= f.text_field :dob_lteq, placeholder: "Nascido até:", class: "form-control" %>
      </div>

      <div class="input-group input-daterange">
        <%= f.text_field :devices_purchased_at_gteq, placeholder: "Comprado de:", class: "form-control" %>
        <div class="input-group-addon">até</div>
        <%= f.text_field :devices_purchased_at_lteq, placeholder: "Comprado até:", class: "form-control" %>
      </div>

      <%= f.submit "Buscar", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
</div>
<br/>
