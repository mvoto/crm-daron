<%= simple_form_for([:admin, @user], html: { class: 'form-horizontal', id: 'mainForm', multipart: true } ) do |f| %>

  <%= f.error_notification %>

  <div class="form-group row">
    <label for="user_email" class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <%= f.text_field :email, class: "form-control", placeholder: "Digite o email" %>
    </div>
  </div>

  <div class="form-group row">
    <label for="user_role" class="col-sm-2 col-form-label">Perfil</label>
    <div class="col-sm-10">
      <%= f.select :role, options_for_select(User::ROLES), {}, { class: "form-control" } %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-sm-11"></div>
    <div class="col-sm-1">
      <%= f.submit "Salvar", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
