<div class='row'>
  <div class='col-lg-12'>
    <h1 class="page-header">
      <%= t("labels.list_users") %>
      <%= link_to I18n.t('helpers.links.new'), new_user_path, class: 'btn btn-default not-visited', role: "button" %>
    </h1>
  </div>
</div>

<table class="table table-hover table-condensed table-responsive table-striped">
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.user.email") %></th>
      <th><%= t("activerecord.attributes.user.role") %></th>
      <th><%= t("activerecord.attributes.user.created_at") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td title='<%= user.email %>'><%= link_to user.email, user_path(user.id) %></td>
        <td>Admin</td>
        <td><%= user.created_at.try(:strftime, '%d/%m/%Y') %></td>
        <td>
          <%= button_to user_path(user), method: :get, class: 'btn btn-success', 'data-toggle' => "tooltip", title: "#{I18n.t('helpers.links.details')}" do %>
            <i class="fa fa-eye fa-fw"></i>
          <% end %>
        </td>
        <td>
          <%= button_to edit_user_path(user), method: :get, class: 'btn btn-primary', 'data-toggle' => "tooltip", title: "#{I18n.t('helpers.links.edit')}" do %>
            <i class="fa fa-edit fa-fw"></i>
          <% end %>
        </td>
        <td>
          <%= button_to user_path(user), method: :delete, data: { confirm: I18n.t('helpers.links.confirm'), toggle: "tooltip" }, class: 'btn btn-danger', title: "#{I18n.t('helpers.links.destroy')}" do %>
              <i class="fa fa-trash-o fa-fw"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div class='pull-right'>
  <%= will_paginate @users, renderer: BootstrapPagination::Rails %>
</div>
